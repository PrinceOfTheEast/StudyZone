<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="11dp"
    app:cardElevation="11dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            android:layout_weight="15"
            android:contentDescription="@string/app_name" />
        <TextView
            android:id="@+id/tvSubjectTitle"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvSubjectTime"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#7879ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnCancelNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Notification"
            android:textSize="14dp"
        />
        <TextView
            android:id="@+id/tvNotificationStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>


        <ImageView
            android:id="@+id/ivDeleteEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="15"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_delete_black_32dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>