<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <princeoftheeast.github.com.studyzone.Models.LetterIV
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ivWeeklyLetters"
            android:layout_margin="9dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWeeklyDays"
            android:text="Days"
            android:layout_marginLeft="7dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ivWeeklyLetters"
            android:textSize="26sp"/>

    </RelativeLayout>



</android.support.v7.widget.CardView>